.ais-search-box--magnifier-wrapper
  display none


.ais-hits--item
  background $color-gray-yellow
  transition background $t-sec

  a
    color #222

  &:nth-child(2n)
    background $color-white

  &:hover
    background $color-yellow!important


.ais-hits__empty
  padding 16px


.ais-search-box--reset
  display none!important


.ais-search-box
  height 40px
