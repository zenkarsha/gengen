.swal2-container.swal2-shown
  background rgba(0, 0, 0, .8)!important
  z-index 1000001!important


.swal2-popup
  border-radius $s-radius!important
  border 0!important
  padding 0!important
  box-shadow 0px 0px 100px rgba(0, 0, 0, .1)!important
  justify-content flex-start!important

  .swal2-header
    display block

  .swal2-icon
    text-align center

  .swal2-title
    margin 0!important
    font-weight normal!important
    font-size 1.5rem!important

  .swal2-content
    padding 16px!important
    h2
      margin-top 8px
    .post-image
      __block-shadow()
      margin-bottom 16px
      background #222
      img
        display flex
        max-width 100%
        max-height 300px
        margin auto
    .coinhive-captcha
      overflow-x hidden
    .recaptcha-container
      display flex
      justify-content center

  .swal2-textarea
    margin 0!important
    position relative!important
    width 100%!important
    height 80px!important
    padding 10px!important
    font-size 1.2rem!important
    outline none!important
    box-sizing border-box!important
    transition border $t-sec!important
    border 0!important
    border-radius $s-radius!important
    background $color-white!important
    border 2px solid $color-gray!important
    box-shadow none!important
    &:focus
      border-color darken($color-black, 10%)!important

  .swal2-actions
    padding 12px
    width 100%
    height 100%
    background $color-gray-yellow
    border-radius $s-radius
    margin-top 0!important
    min-height 80px
    text-align center
    > .button
    > button
      margin 0 8px
      +below($tablet)
        font-size .75rem!important

  .swal2-image
    margin 0!important
    height auto!important
    max-height 50vh!important
    margin-top 4px!important

  .swal2-styled
    padding 16px 32px!important
