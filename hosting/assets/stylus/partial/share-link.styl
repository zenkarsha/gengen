.share-link
  position relative
  width 100%
  display flex
  justify-content space-between
  align-items center
  border 1px solid #ededed
  background #fafafa
  border-radius $m-radius

  *
    display inline-block

  input
    margin-left 16px
    border none
    overflow hidden
    white-space nowrap
    background none
    color $color-black
    font-size 1rem
    width 100%

  .copy-button
    color #2793e6
    padding 0 8px
    text-transform uppercase
    font-size 1.2rem
    vertical-align middle
    white-space nowrap
    font-weight 500
    letter-spacing .007px
    padding 16px
    cursor pointer
