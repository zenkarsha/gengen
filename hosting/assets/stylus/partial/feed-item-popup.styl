.feed-item-popup
  .image
    position relative
    img
      max-width 100%

  .image-caption
    display flex
    justify-content space-between
    margin 8px 4px 0
    .image-info
      display flex
      align-items center
      justify-content center
      font-size 90%
      opacity .7
      span
        margin-right 16px
    .buttons
      display flex
      .button
        margin 0
      .button + .button
        margin-left 8px
