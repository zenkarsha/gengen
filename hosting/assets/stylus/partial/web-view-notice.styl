.web-view-notice
  position fixed
  top 0
  left 0
  bottom 0
  right 0
  background rgba(0, 0, 0, .8)
  z-index 9999999
  display flex
  justify-content center
  align-items center
  text-align center

  .notice-container
    width calc(100% - 32px)
    background $color-white
    padding 16px
    border-radius $m-radius
    box-shadow 0px 0px 100px rgba(0, 0, 0, .1)

  .share-link
    margin-top 16px
