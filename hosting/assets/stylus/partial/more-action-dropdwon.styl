.more-action-dropdwon
  position relative
  cursor pointer!important
  user-select none!important

  &.on
    .dropdown
      display block

  .dropdown
    __block-shadow()
    display none
    position absolute
    top calc(100% + 8px)
    left -8px
    min-width 160px
    background $color-white
    border 1px solid $color-gray
    user-select none!important
    > .button
    > div > .button
      padding 12px 16px!important
      margin 0
      width 100%
      background none
      color $color-black
      text-align left
      &:hover
        background $color-gray-yellow
      &:focus
        box-shadow none
