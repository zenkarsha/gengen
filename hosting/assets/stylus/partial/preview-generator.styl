.preview-generator
  position fixed
  width 100vw
  height 100vh
  top 0
  left 0
  overflow-y scroll
  z-index 500001
  background $color-gray-light

  .preview-title
    display flex
    justify-content center
    align-items center
    width 100%
    z-index 500002
    padding 8px 16px

  .preview-buttons
    width 100%
    margin 32px 0 108px
    .button-group
      display flex
      justify-content center
      .button
        margin-left 8px
        &:first-child
          margin-left 0px

  .generator-page
    __block-shadow()
    background $color-white
    width calc(100% - 32px)
    height auto
    margin auto
    max-width 960px
    position relative
    .generator-page-overlay
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      width 100%
      height 100%
      z-index 100
    .section.generator-panel
      padding 0
