.page-loading
  position fixed
  left 0
  top 0
  z-index 1000001
  display flex
  justify-content center
  align-items center
  width 100%
  height 100%
  background-color $color-gray-yellow
  transition opacity 200ms


.page-processing
  position fixed
  left 0
  top 0
  z-index 1000001
  display flex
  justify-content center
  align-items center
  width 100%
  height 100%
  opacity .98
  background-color #ffffff
  background-position center
  background-repeat no-repeat
  background-image url(/images/page-processing.gif)
  transition opacity 200ms


.page-publishing
  position fixed
  left 0
  top 0
  z-index 1000001
  display flex
  justify-content center
  align-items center
  width 100%
  height 100%
  opacity .98
  background-color #ffffff
  background-position center
  background-repeat no-repeat
  background-image url(/images/page-publishing.gif)
  transition opacity 200ms


.spinner
  margin 0 auto
  width 90px
  text-align center

  & > div
    width 18px
    height 18px
    margin 0 3px
    background-color $color-black
    border-radius 100%
    display inline-block
    -webkit-animation sk-bouncedelay 1.4s infinite ease-in-out both
    animation sk-bouncedelay 1.4s infinite ease-in-out both

  .bounce1
    -webkit-animation-delay -0.32s
    animation-delay -0.32s

  .bounce2
    -webkit-animation-delay -0.16s
    animation-delay -0.16s
