.error-container
  width 100%
  height 100%
  min-height 50vh
  display flex
  justify-content center
  align-items center

  +below($tablet)
    flex-flow column
    text-align center

  img
    max-width 300px
    +below($tablet)
      margin-bottom 16px

  .error-content
    max-width 320px
    margin-left 24px
    +below($tablet)
      margin 0
      margin-bottom 64px
    h1
      margin-top 0
