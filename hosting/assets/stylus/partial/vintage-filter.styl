.vintage-container
  display inline-block
  .vintage-image
    height 50vh
    background-size contain
    background-position center
    background-repeat no-repeat

  .vintage-filters
    display flex
    overflow-x scroll
    overflow-y hidden
    white-space nowrap
    margin 0
    li
      flex 0 0 auto
      width 100px
      height 100px
      border-radius $m-radius
      background-size contain
      margin-right 8px
      position relative
      &.active span
        background $color-yellow
      &:last-child
        margin-right 0
      span
        display flex
        justify-content center
        background $color-gray-yellow
        width 100%
        font-size 70%
        padding 4px
        position absolute
        bottom 0
        border-bottom-left-radius $s-radius
        border-bottom-right-radius $s-radius

  .icon-filter
    display block
    width 16px
    height 16px
    background url('/images/icon/filter.svg') center no-repeat
