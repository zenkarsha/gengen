.user-nav
  position relative
  margin-left 16px

  .user-avatar
    width 64px
    height 64px
    border-radius 50%
    border 2px solid $color-gray-light
    background-size cover
    transition border $t-sec
    cursor pointer
    box-shadow inset 0 0 5px 0 rgba(0, 0, 0, 0.15)
    &:hover
      border 2px solid $color-gray
    &:after
      display none

  .user-nav-dropdown
    __block-shadow()
    position absolute
    top calc(100% + 8px)
    right 0
    border 1px solid $color-gray
    width 200px
    background $color-white
    flex-flow column
    z-index 50001
    display none
    &.on
      display flex
    a
      display flex
      justify-content start!important
      padding 12px 16px!important
      margin 0!important
      &:after
        display none
      &:hover
        background $color-gray-yellow
    hr
      margin 0
