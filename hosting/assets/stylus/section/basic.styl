.section
  padding 16px 0

  &.large-padding
    padding 32px 0

  &.center
    display flex
    justify-content center
    text-align center

  &.gray
    padding 48px 0
    background $color-gray-yellow
    &.small-padding
      padding 32px 0
    h1, h2, h3, h4, h5, h6
      margin-top 0
    +below($tablet)
      padding 24px 0

  &.border-top
    border-top 1px solid $color-gray-light
