.generator-dialog
  #generator_preview
    position relative

    +below($tablet)
      display block
      line-height 0

    .preview-area
      +below($tablet)
        display block
        padding 16px
      .preview-area-wrapper
        position relative
        width 100%
        height 100%
      img
        display flex
        max-width 100%
        max-height 100%
        margin auto
        object-fit contain
        +below($desktop)
          max-height 40vh

      .loading
        __generator-loading()

  #output_container
    __font(noto)
    line-height 0
    font-weight bold
    background white
    position relative

    .dialog-text
      position absolute
      word-break break-word
      display flex
      justify-content center
      align-items center
      overflow hidden
      flex-flow column

      div
        display block
        min-height 1rem
