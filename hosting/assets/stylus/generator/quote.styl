.generator-quote

  #generator_preview
    position relative

    +below($tablet)
      display block
      line-height 0

    .preview-area
      +below($tablet)
        display block
        padding 0
      .loading
        __generator-loading()
      .preview-area-wrapper
        position relative
        width 100%
        height 100%
        display flex
        +below($tablet)
          display block
      img
        display flex
        max-width 100%
        max-height 100%
        margin auto
        object-fit contain
        +below($desktop)
          max-height 40vh

  #output_container
    __font(noto)
    line-height 1.3
    text-align left
    font-weight bold
    background #000

    .quote-image
      height 100%
      display flex
      img
        max-height 100%
        margin auto 0

    .quote-text
      position absolute
      text-align left
      color white
      user-select none!important
      cursor default
      overflow hidden
      word-break break-all
      padding-right 16px

    .role-name
      position absolute
      text-align right
      color white
      user-select none!important
      cursor default
