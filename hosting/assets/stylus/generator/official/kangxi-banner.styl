.generator-kangxi-banner
  #generator_preview
    position relative

    +below($tablet)
      display block
      line-height 0

    .preview-area
      +below($tablet)
        padding 16px
        display block
      .preview-area-wrapper
        position relative
        width 100%
        height 100%
        display flex
        flex-flow column
      img
        display flex
        max-width 100%
        max-height 100%
        margin auto
        +below($desktop)
          max-height 40vh
      .loading
        __generator-loading()


  #output_container
    color #fff
    background #000
    width 850px
    height 315px
    display flex
    align-items center
    overflow hidden
    word-break break-all
    padding 24px 48px
    line-height 1.2
    font-family 'KangxiDict'

    .text-wrapper
    .text
    .subtext
      width 100%

    .subtext
      margin-top 10px
