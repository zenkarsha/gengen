.generator-kangxi-poem
  position relative

  .loading
    generator-loading-full()


  #generator_preview
    position relative

    +below($tablet)
      display block
      line-height 0

    .preview-area
      +below($tablet)
        padding 16px
        display block
      .preview-area-wrapper
        position relative
        width 100%
        height 100%
        display flex
        flex-flow column
      img
        display flex
        max-width 100%
        max-height 100%
        margin auto
        box-shadow 0 5px 15px rgba(0, 0, 0, 0.25)
        +below($desktop)
          max-height 40vh


  #output_container
    __font(noto)
    line-height 0
    background #000
    writing-mode vertical-rl

    .text
      color #fff
      font-size 30px
      user-select none!important
      cursor default
      line-height 1.2
      &.text
        color white
