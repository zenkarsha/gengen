.generator-fake-teamkp-sticker
  #generator_preview
    position relative

    +below($tablet)
      display block
      line-height 0

    .preview-area
      +below($tablet)
        padding 16px
        display block
      .preview-area-wrapper
        position relative
        width 100%
        height 100%
        display flex
        flex-flow column
      img
        display flex
        max-width 100%
        max-height 100%
        margin auto
        +below($desktop)
          max-height 40vh
      .loading
        __generator-loading()


  #output_container
    background #dddddd
    width auto
    height auto
    display flex
    align-items left
    overflow hidden

    .text-wrapper
    .text
    .highlight
      width 100%
      font-size 72px
      line-height 1
      font-family 'Noto Sans TC', sans-serif
      font-weight bold

    .text-wrapper
      position relative
      margin 40px
      margin-bottom 80px
      padding 24px
      padding-right 48px
      border-radius 1px
      border-top-right-radius 24px
      background #ffffff
      box-shadow 0 0 5px 0 rgba(0, 0, 0, 0.3)
      &:after
        content ""
        position absolute
        bottom -39px
        left 0
        border-width 40px 40px 0 0
        border-style solid
        border-color #ffffff transparent
        display block
        width 0
        filter drop-shadow(0 4px 1px rgba(0, 0, 0, 0.15))

    .highlight
      margin-top 10px

    .hashtag
      position absolute
      bottom 12px
      right 12px
      color #000
      font-size 12px
      transform rotate(90deg)
      transform-origin 100% 0
