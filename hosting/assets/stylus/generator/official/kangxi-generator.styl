.generator-kangxi-generator
  #generator_preview
    position relative

    +below($tablet)
      display block
      line-height 0

    .preview-area
      +below($tablet)
        padding 16px
        display block
      .preview-area-wrapper
        position relative
        width 100%
        height 100%
        display flex
        flex-flow column
      img
        display flex
        max-width 100%
        max-height 100%
        margin auto
        +below($desktop)
          max-height 40vh
      .loading
        __generator-loading()


  #output_container
    __font(noto)
    line-height 0
    background #000

    .text
      color #fff
      font-family 'KangxiDict'
      font-size 30px
      line-height 1.2
      max-width 600px
      user-select none!important
      cursor default
      &.text
        color white
