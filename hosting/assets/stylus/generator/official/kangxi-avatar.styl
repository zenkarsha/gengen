.generator-kangxi-avatar
  #generator_preview
    position relative

    +below($tablet)
      display block
      line-height 0

    .preview-area
      +below($tablet)
        padding 16px
        display block
      .preview-area-wrapper
        position relative
        width 100%
        height 100%
        display flex
        flex-flow column
      img
        display flex
        max-width 100%
        max-height 100%
        margin auto
        +below($desktop)
          max-height 40vh
      .loading
        __generator-loading()


  #output_container
    color #fff
    background #000
    width 600px
    height 600px
    display flex
    justify-content center
    align-items center
    overflow hidden
    text-align center
    word-break break-all
    padding 64px
    font-size 60px
    line-height 1
    font-family 'KangxiDict'

    &.vertical-text
      writing-mode vertical-rl

    .text
      max-width 100%
      max-height 100%
      overflow hidden
