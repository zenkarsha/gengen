.generator-windows-xp-alert
  #generator_preview
    position relative

    +below($tablet)
      display block
      line-height 0

    .preview-area
      +below($tablet)
        padding 16px
        display block
      .preview-area-wrapper
        position relative
        width 100%
        height 100%
        display flex
      img
        display flex
        max-width 100%
        max-height 100%
        margin auto
        +below($desktop)
          max-height 40vh
      .loading
        __generator-loading()


  #output_container
    line-height 0
    font-weight bold
    background white
    position relative
    max-height 5000em

    .text
      font(PMingLiU)
      position absolute
      word-break break-word
      display flex
      font-size 16px
      line-height 1
      overflow hidden
      color #222
