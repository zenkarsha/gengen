.generator-kangxi-inscribed-board
  #generator_preview
    position relative

    +below($tablet)
      display block
      line-height 0

    .preview-area
      +below($tablet)
        padding 16px
        display block
      .preview-area-wrapper
        position relative
        width 100%
        height 100%
        display flex
        flex-flow column
      img
        display flex
        max-width 100%
        max-height 100%
        margin auto
        +below($desktop)
          max-height 40vh
      .loading
        __generator-loading()


  #output_container
    position relative
    line-height 0

    .text
      font-family 'KangxiDict'
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      display flex
      justify-content center
      align-items center
      text-shadow 0 3px 10px rgba(0, 0, 0, .75)
      color #DECA87
      font-size 165px
