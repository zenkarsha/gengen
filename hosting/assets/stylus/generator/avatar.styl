.generator-avatar
  .draggable-container
    margin auto

  #frame_image_wrapper
    width 100%
    height 100%
    +below($desktop)
      height 40vh

  #frame_container
    position relative
    overflow hidden
    line-height 0
    text-align center
    display block
    height 100%
    img
      max-width 100%
      max-height 100%
      margin auto
      background-repeat no-repeat
      object-fit contain
    +below($desktop)
      height inherit

  .loading
    width 100%
    height 100%
    position absolute
    display flex
    justify-content center
    align-items center
    background-color rgba(255, 255, 255, .8)
    top 0
    left 0
    opacity 0
    &.on
      opacity 1
