.social-button
  background transparent
  border 0
  padding 4px 0
  margin 0
  width 64px
  height 64px
  cursor pointer

  &:before
    font-family Flaticon-social
    font-style normal
    font-size 2rem
    transition color $t-sec
    color $color-white
    padding 16px
    border-radius 50%
    transition background $t-sec

  &.small:before
    font-size 1rem
    padding 12px

  &.facebook
    &:before
      content '\f101'
      background #374EA3
    &:hover:before
      background darken(#374EA3, 20%)

  &.twitter
    &:before
      content '\f103'
      background #27A9F7
    &:hover:before
      background darken(#27A9F7, 20%)

  &.line
    &:before
      content '\f104'
      background #00CE00
    &:hover:before
      background darken(#00CE00, 20%)

  &.googleplus
    &:before
      content '\f102'
      background #F02D26
    &:hover:before
      background darken(#F02D26, 20%)

  &.tumblr
    &:before
      content '\f100'
      background #264E70
    &:hover:before
      background darken(#264E70, 20%)

  &.email
    &:before
      content '\f105'
      background #757575
    &:hover:before
      background darken(#757575, 20%)


.social-button + .social-button
  margin-left 8px
