__tool-buttons()
  position absolute
  bottom 0
  left 0
  right 0
  display flex
  justify-content flex-end
  align-items center
  border-bottom-left-radius $s-radius
  border-bottom-right-radius $s-radius
  background rgba(255, 255, 255, 0)

  > .button
  > .cropper-container > .button
    margin 0
    padding 0!important
    border-radius 0
    background none
    width 100%
    height 100%

  .make-default
    display block
    width 16px
    height 16px
    background url('/images/icon/top.svg') center no-repeat
    margin auto

  > .button:focus
  > .cropper-container > .button:focus
    box-shadow none!important

  > .button
  > .cropper-container
    width 100%
    height 44px
    background transparentify(lighten($color-black, 20%))
    cursor pointer
    transition background $t-sec
    display flex
    justify-content center
    align-items center
    +above($desktop)
      &:hover
        background darken($color-black, 20%)
